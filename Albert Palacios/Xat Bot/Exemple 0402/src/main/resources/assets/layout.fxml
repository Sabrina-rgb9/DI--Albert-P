<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.ChatController">
    <top>
        <VBox spacing="6" padding="10">
            <HBox spacing="6">
                <Button fx:id="btnTextRequest" text="Send Text" onAction="#onSendText"/>
                <TextField fx:id="textInput" promptText="Write your question..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnStop" text="Stop" onAction="#onStop" />
            </HBox>
            <HBox spacing="6">
                <Button fx:id="btnPickImage" text="Choose Image..." onAction="#onPickImage"/>
                <Label fx:id="lblImageName" text="No image selected" />
                <ChoiceBox fx:id="choiceImageQuestion">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Describe this image"/>
                            <String fx:value="How many cats are there in this image?"/>
                            <String fx:value="What objects are visible?"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button fx:id="btnSendImage" text="Send Image" onAction="#onSendImage"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox padding="10" spacing="6">
            <Label text="Conversation"/>
            <TextArea fx:id="textArea" editable="false" wrapText="true" prefHeight="400"/>
        </VBox>
    </center>

    <bottom>
        <HBox padding="10" spacing="10">
            <ProgressIndicator fx:id="progress" visible="false"/>
            <Label fx:id="status" text="Idle"/>
        </HBox>
    </bottom>
</BorderPane>
